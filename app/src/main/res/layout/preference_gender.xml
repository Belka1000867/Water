<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    >

    <TextView
        android:id="@+id/tv_gender_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:text="@string/preferences_title_gender"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:gravity="center_vertical"
        android:padding="15sp"
        />

    <TextView
        android:id="@+id/tv_gender_value"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="79dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tv_gender_title"
        android:layout_toEndOf="@+id/tv_gender_title"
        android:layout_marginStart="79dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Value"
        android:gravity="center"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="#FF8500"
        android:background="#79DAFF"
 />

</RelativeLayout>