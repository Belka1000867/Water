<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    >

    <TextView
        android:id="@+id/tv_gender_title_v2"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:text="Gender"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:gravity="center_vertical"
        android:padding="15sp"
        />

    <Button
        android:id="@+id/b_pref_male_v3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_toRightOf="@+id/tv_gender_title_v2"
        android:layout_toEndOf="@+id/tv_gender_title_v2"
        android:layout_centerVertical="true"
        android:text="@string/preferences_gender_male"
        />

    <Button
        android:id="@+id/b_pref_female_v3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/b_pref_male_v3"
        android:layout_toEndOf="@+id/b_pref_male_v3"
        android:text="@string/preferences_gender_female"
        />


</RelativeLayout>