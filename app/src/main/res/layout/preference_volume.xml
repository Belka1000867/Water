<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/tv_volume_title"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="@string/preferences_title_volume"
        style="@style/Water.Preference.Title"
        />

    <Button
        android:id="@+id/b_pref_ml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/b_pref_oz"
        android:layout_toStartOf="@+id/b_pref_oz"
        android:text="@string/preferences_volume_ml"
        android:background="@drawable/selector_preference_btn"
        style="@style/Water.Preference.LeftButton"
        />

    <Button
        android:id="@+id/b_pref_oz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/preferences_volume_oz"
        android:background="@drawable/selector_preference_btn"
        style="@style/Water.Preference.RightButton"
        />

</RelativeLayout>