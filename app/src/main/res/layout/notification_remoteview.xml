<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        style="@style/TextAppearance.AppCompat.Medium"
        />

    <TextView
        android:id="@+id/tv_notification_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_notification_title"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:text="text text text text"
        />

    <Button
        android:id="@+id/btn_item_notification_drink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="Drink"
        />

    <Button
        android:id="@+id/btn_item_notification_delay"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Delay"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/btn_item_notification_drink"
        android:layout_toStartOf="@+id/btn_item_notification_drink"
        />


</RelativeLayout>