<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/tv_gender_title_v4"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="@string/preferences_title_gender"
        style="@style/Water.Preference.Title"
        />

    <Button
        android:id="@+id/b_pref_male_v4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/b_pref_female_v4"
        android:layout_toStartOf="@+id/b_pref_female_v4"
        android:text="@string/preferences_gender_male"
        android:background="@drawable/selector_preference_btn"
        style="@style/Water.Preference.LeftButton"
        />

    <Button
        android:id="@+id/b_pref_female_v4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/preferences_gender_female"
        android:background="@drawable/selector_preference_btn"
        style="@style/Water.Preference.RightButton"
        />

</RelativeLayout>