<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_stats_row"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/tv_stats_time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:ems="3"
        android:text="10:00"
        android:layout_alignTop="@+id/iv_stats_description"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/iv_stats_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_alignTop="@+id/iv_stats_water_need"
        android:layout_toLeftOf="@+id/iv_stats_water_need"
        android:layout_toStartOf="@+id/iv_stats_water_need"
        android:layout_marginRight="29dp"
        android:layout_marginEnd="29dp" />

    <ImageView
        android:id="@+id/iv_stats_water_need"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:src="@mipmap/ic_water"
        />

    <ImageView
        android:id="@+id/iv_stats_faq"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:src="@mipmap/ic_launcher"
        />

</RelativeLayout>